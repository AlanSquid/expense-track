<div class="container">
  <div class="new-title-group">
    <p class="new-required">*必填欄位</p>
    <h3 class="new-title">請輸入你的支出</h3>
  </div>
  {{> message}}
  <form action="/expenses" method="POST" class="new-form">
    <div class="new-form-group">
      <label for="name">名稱*：</label>
      <input type="text" id="name" name="name" maxlength="10" value="{{name}}">
    </div>

    <div class="new-form-group">
      <label for="date">日期*：</label>
      <input type="date" id="date" name="date" value="{{date}}">
    </div>

    <div class="new-form-group">
      <label for="category">類別*：</label>
      <select name="category" id="category">
        <option value="">Select</option>
        {{#each categories}}
        <option value="{{this._id}}" {{this.selected}}>{{this.name}}</option>
        {{/each}}
      </select>
    </div>
    <div class="new-form-group">
      <label for="amount">金額*：</label>
      <input type="number" id="amount" name="amount" value="{{amount}}">
    </div>
    <button type="submit" class="new-add-btn">新增支出</button>
  </form>


</div>