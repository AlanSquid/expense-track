<div class="container">
  <div class="category">
    <form action="/">
      <select class="category-dropdown" name="sort" id="sort">
        <option value="default">類別</option>
        <option value="home">家居物業</option>
        <option value="traffic">交通出行</option>
        <option value="amusement">休閒娛樂</option>
        <option value="diet">餐飲食品</option>
        <option value="other">其他</option>
      </select>
    </form>
  </div>

  <div class="total-group">
    <div class="total-text">總金額：</div>
    <div class="totalAmount">50000</div>
  </div>


  <div class="expense">
    <ul>
      {{#each expenses}}
      <li class="expense-list">
        <div class="item-group">
          <div class="item-icon">
            <i class="fa-solid fa-utensils"></i>
          </div>
          <div class="item-text">
            <h3 class="item-name">{{this.name}}</h3>
            <h6 class="item-date">{{this.date}}</h6>
          </div>
          <div class="item-price">
            <p>{{this.price}}</p>
          </div>
        </div>
        <div class="edit-del">
          <a href="/expenses/{{this._id}}/edit">修改</a>
          <form action="/expenses/{{this._id}}?_method=DELETE" method="POST">
            <button type="submit" class="del-btn">刪除</button>
          </form>
        </div>
      </li>
      {{/each}}
