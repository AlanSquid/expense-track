<div class="container">
  <div class="register-outer">
    <h1>Register</h1>
    {{> message}}
    <form action="/users/register" method="POST">
      <div class="register-form">
        <div class="register-input-group">
          <label for="email">使用者名稱:</label>
          <input type="text" placeholder="Name" id="name" name="name" value="{{name}}">
        </div>
        <div class="register-input-group">
          <label for="email">電子信箱:</label>
          <input type="text" placeholder="Email" id="email" name="email" value="{{email}}">
        </div>
        <div class="register-input-group">
          <label for="password">密碼(至少6碼):</label>
          <input type="password" placeholder="Password" name="password" id="password" value="{{password}}">
        </div>
        <div class="register-input-group">
          <label for="confirmPassword">密碼確認:</label>
          <input type="password" placeholder="Confirm Password" name="confirmPassword" id="confirmPassword"
            value="{{confirmPassword}}">
        </div>
        <button type="submit" class="register-btn">Sign up</button>
      </div>
    </form>
  </div>
</div>