<div class="container">
  <div class="edit-title-group">
    <p class="edit-required">*必填欄位</p>
    <h3 class="edit-title">請修改你的支出</h3>
  </div>

  <form action="/expenses/{{record._id}}?_method=PUT" method="POST" class="edit-form">
    <div class="edit-form-group">
      <label for="name">名稱*：</label>
      <input type="text" id="name" name="name" value="{{record.name}}">
    </div>

    <div class="edit-form-group">
      <label for="date">日期*：</label>
      <input type="date" id="date" name="date" value="{{record.date}}">
    </div>

    <div class="edit-form-group">
      <label for="category">類別*：</label>
      <select name="category" id="category">
        <option value="">Select</option>
        {{#each categories}}
        <option value="{{this._id}}" {{this.selected}}>{{this.name}}</option>
        {{/each}}
      </select>
    </div>
    <div class="edit-form-group">
      <label for="amount">金額*：</label>
      <input type="number" id="amount" name="amount" value="{{record.amount}}">
    </div>
    <a href=""><button class="edit-add-btn">送出</button></a>
  </form>
</div>